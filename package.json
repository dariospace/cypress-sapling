{
  "name": "cypress-sapling",
  "version": "1.0.0",
  "description": "A skeleton for every Cypress repository",
  "main": "",
  "scripts": {
    "c": "yarn commit",
    "clean:install": "rm -r node_modules; rm yarn.lock",
    "clean:run": "rm -r artifacts",
    "commit": "npx git-cz",
    "cypress:debug": "cypress open",
    "cypress": "cypress run",
    "format:fix": "prettier --write '**/*.{js,json}'",
    "format": "prettier --check '**/*.{js,json}'",
    "lint:fix": "eslint --fix '**/*.js'",
    "test": "yarn run cypress",
    "lint": "eslint '**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,json,md}": [
        "prettier --write",
        "git add"
      ],
      "**/*.js": [
        "eslint",
        "git add"
      ]
    }
  },
  "author": "Diogo Nunes",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/cypress": "^4.0.5",
    "cypress": "^3.4.1",
    "cypress-commands": "^0.2.0",
    "eslint": "^6.0.1",
    "eslint-plugin-cypress": "^2.2.1",
    "git-cz": "^3.2.1",
    "husky": "^3.0.2",
    "lint-staged": "^8.1.6",
    "prettier": "^1.18.2"
  },
  "dependencies": {}
}
