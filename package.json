{
  "name": "cypress-sapling",
  "version": "1.0.0",
  "description": "A skeleton for every Cypress repository",
  "main": "",
  "scripts": {
    "c": "yarn commit",
    "clean:install": "rm -r node_modules",
    "clean:report": "rm -rf artifacts/mochawesome-*",
    "commit": "npx git-cz",
    "cypress:debug": "cypress open",
    "cypress": "cypress run",
    "deps:install": "yarn install --frozen-lockfile",
    "deps:upgrade": "yarn clean:install && yarn install",
    "format:fix": "prettier --write '**/*.{js,json}'",
    "format": "prettier --check '**/*.{js,json}'",
    "lint:fix": "eslint --fix '**/*.js'",
    "lint": "eslint '**/*.js'",
    "report": "cp -R artifacts/screenshots/ artifacts/mochawesome-report/assets/; npx mochawesome-merge --reportDir artifacts/mochawesome-sources > mochawesome.json; npx marge mochawesome.json -o ./artifacts/mochawesome-report; rm mochawesome.json;",
    "report:open": "open artifacts/mochawesome-report/mochawesome.html",
    "setup-secrets": "cp -i cypress/fixtures/config/cypress.secrets.template.json cypress.env.json && open -t cypress.env.json",
    "test": "yarn run clean:report && yarn run cypress; yarn run report; yarn report:open"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js": [
      "eslint",
      "git add"
    ]
  },
  "eslintIgnore": [
    "artifacts/**/*.js"
  ],
  "author": "Diogo Nunes",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/cypress": "^4.1.1",
    "cypress": "^3.4.1",
    "cypress-commands": "^0.2.0",
    "cypress-dark": "^1.7.14",
    "cypress-select-tests": "^1.3.1",
    "eslint": "^6.2.2",
    "eslint-plugin-cypress": "^2.6.1",
    "git-cz": "^3.2.1",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "mocha": "5.2.0",
    "mochawesome": "^4.1.0",
    "mochawesome-merge": "^2.0.1",
    "mochawesome-report-generator": "^4.0.1",
    "prettier": "^1.18.2"
  },
  "dependencies": {},
  "private": true
}
